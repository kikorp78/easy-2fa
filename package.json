{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "easy-2fa",
  "version": "1.0.1",
  "description": "A lightweight npm package for generation and verification of 2FA codes.",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "watch": "tsc --watch",
    "check-format": "prettier . --check",
    "run-format": "prettier . --write",
    "prepare": "husky install"
  },
  "author": "kikorp78",
  "keywords": [
    "2fa",
    "mfa",
    "auth",
    "authentication",
    "totp",
    "hotp",
    "security",
    "crypto"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kikorp78/easy-2fa.git"
  },
  "bugs": {
    "url": "https://github.com/kikorp78/easy-2fa/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@8.14.1",
  "dependencies": {
    "hi-base32": "^0.5.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.5",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
